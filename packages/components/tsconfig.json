{
  "compilerOptions": {
    "strictNullChecks": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "jsxFactory": "React.createElement",
    "jsxFragmentFactory": "React.Fragment",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "target": "ES6",
    "lib": ["DOM", "ES2017"],
    "skipLibCheck": true,
  },
  "exclude": ["node_modules"]
}
